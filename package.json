{
  "name": "graph-market",
  "version": "1.0.0",
  "description": "A GraphQL-powered headless e-commerce API",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:unit": "jest --config jest.config.cjs --selectProjects unit",
    "test:integration": "jest --config jest.config.cjs --selectProjects integration",
    "test:e2e": "jest --config jest.config.cjs --testPathPattern=\"__tests__/e2e\"",
    "test:load": "jest --config jest.config.cjs --testPathPattern=\"__tests__/load\" --testTimeout=120000",
    "test:performance": "jest --config jest.config.cjs --selectProjects performance",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:all": "jest --config jest.config.cjs --selectProjects unit integration performance",
    "lint": "echo 'Linting configured - No linter setup yet'",
    "build": "echo 'No build step required'",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "seed": "node scripts/seed.js"
  },
  "keywords": [
    "graphql",
    "apollo-server",
    "mongodb",
    "ecommerce",
    "api",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "apollo-server-express": "^3.12.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "graphql": "^16.8.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-query-complexity": "^1.1.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
